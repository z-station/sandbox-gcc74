version: "3.3"

services:

  sandbox-gcc74-{{ env }}:
    build:
      context: ..
      dockerfile: ./docker/Dockerfile
    container_name: sandbox-gcc74-{{ env }}
    image: sandbox-gcc74-{{ env }}
    volumes:
      - ../src:/app/src:ro
    ports:
      - "{{ gcc74_public_port|default(8002) }}:8002"
    restart: on-failure
    environment:
      GUNICORN_WORKERS: {{ gcc74_gunicorn_workers|default(1) }}
